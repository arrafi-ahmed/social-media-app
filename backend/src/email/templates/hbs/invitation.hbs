{{#*inline "content"}}
<h1 style="font-size: 28px; font-weight: bold; color: #1a1a1a; margin: 0 0 16px 0; line-height: 1.3;">You've Been Invited!</h1>
<p style="font-size: 16px; line-height: 1.6; color: #1a1a1a; margin: 0 0 16px 0;">Hello,</p>
<p style="font-size: 16px; line-height: 1.6; color: #1a1a1a; margin: 0 0 24px 0;">You got a new invitation from <strong>{{senderName}}</strong></p>
{{#if message}}
<div style="background-color: #f8f9fa; border-left: 4px solid #e40046; padding: 16px; margin: 24px 0; border-radius: 4px;">
  <p style="font-size: 16px; line-height: 1.6; color: #1a1a1a; margin: 0; font-style: italic;">"{{message}}"</p>
</div>
{{/if}}
<div style="text-align: center;">
  <a href="{{acceptUrl}}" class="button">Accept Invitation</a>
</div>
{{/inline}}
{{> base}}

